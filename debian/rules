#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DEB_CFLAGS_MAINT_SET=$(dpkg-buildflags --get CFLAGS) -Wno-error=unused-but-set-parameter -Wno-error=unused-but-set-variable

%:
	dh $@ --with quilt

override_dh_auto_clean:
	cp $(CURDIR)/Makefile $(CURDIR)/debian/Makefile.ori
	dh_auto_clean

override_dh_clean:
	dh_clean
	cp $(CURDIR)/debian/Makefile.ori $(CURDIR)/Makefile
	rm -Rf $(CURDIR)/configure
	rm -Rf $(CURDIR)/gdb-7.0
	rm -Rf $(CURDIR)/gdb.files
	rm -Rf $(CURDIR)/build_data.c

override_dh_auto_install:
	dh_auto_install
	cp $(CURDIR)/debian/Makefile.ori $(CURDIR)/Makefile

override_dh_auto_test:
	# Crash does not provide a testsuite
